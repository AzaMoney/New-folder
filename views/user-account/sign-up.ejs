  <h2>Contact Information</h2>
  <form action="../user-account/congratulations" method="post">
    <fieldset>
      <!-- Account Information -->
      <input type="hidden" id="provider_name" name="provider_name" required value="<%= userProfile.provider %>" readonly>

      <input type="hidden" id="user_id" name="user_id" required value="<%= userProfile.user_id %>" readonly>

      <label for="user_name">Name:</label>
      <input type="text" id="user_name" name="user_name" required value="<%= userProfile.displayName %>" readonly>

      <label for="user_email">Email:</label>
      <input type="email" id="user_email" name="user_email" required <% if (userProfile.emails) { %>
      value="<%= userProfile.emails[0].value %>"
        <% } else { %>
          value=""
          <% } %>>

            <label for="user_phone">Phone Number:</label>
            <input type="tel" id="user_phone" name="user_phone">

            <label for="user_website">Website:</label>
            <input type="url" id="user_website" name="user_website">

            <label for="user_linkedin">LinkedIn Profile:</label>
            <input type="text" id="user_linkedin" name="user_linkedin">

            <label for="user_github">GitHub Profile:</label>
            <input type="text" id="user_github" name="user_github">

            <input type="hidden" id="user_picture" name="user_picture" value="<%= userProfile.picture %>" readonly>

            <label for="user_nickname">Nickname:</label>
            <input type="text" id="user_nickname" name="user_nickname" value="<%= userProfile.nickname %>">

            <label for="user_about">Me in 60 seconds:</label>
            <textarea id="user_about" name="user_about"></textarea>
    </fieldset>

    <button type="submit">Sign Up</button>
  </form>